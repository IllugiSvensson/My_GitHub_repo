#!/bin/bash
#–ù–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –∏ –±–∏–±–ª–∏–æ—Ç–µ–∫–∞ —Ñ—É–Ω–∫—Ü–∏–π
appfolder=`realpath $0`
appfolder=${appfolder%/httpN_Linux}
. $appfolder/system/httpN_Linux_lib
cmdLine="$1"



#–ó–ê–ü–£–°–ö BIN –§–ê–ô–õ–ê
[ -e $appfolder/system/temp/Sessions/UPDATE ] && {	#–ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è

	zenity --warning --title=–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ --text="–í–µ–¥—É—Ç—Å—è —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–∏–µ —Ä–∞–±–æ—Ç—ã\n–ü–æ–ø—Ä–æ–±—É–π—Ç–µ —á–µ—Ä–µ–∑ –º–∏–Ω—É—Ç—É" --ellipsize --timeout=3
	exit

}
[ -z $cmdLine ] && {								#–í—ã–∑—ã–≤–∞–µ—Ç—Å—è –µ—Å–ª–∏ –Ω–µ—Ç –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤

	#–°—Ç—Ä–æ–∏–º –æ–∫–Ω–æ –¥–ª—è –≤–≤–æ–¥–∞ –¥–∞–Ω–Ω—ã—Ö
	input=$(zenity --entry --title="httpN –æ—Ç–ª–∞–¥–∫–∞" --width=256 --height=144 --text="–í–≤–µ–¥–∏—Ç–µ –∏–º—è —Ö–æ—Å—Ç–∞" --entry-text="app hostname" --ok-label="–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å" --cancel-label="–í—ã—Ö–æ–¥")
	if [ $? == 0 ]		#–†–∞–∑–±–∏—Ä–∞–µ–º –∫–æ–º–∞–Ω–¥–Ω—É—é —Å—Ç—Ä–æ–∫—É –∏ –∑–∞–ø—É—Å–∫–∞–µ–º –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ
	then

		cmdLine=httpn://${input:0:3}"%20"${input#${input:0:4}}

	else exit;
	fi

}



#–ü–†–û–í–ï–†–ö–ê –ò–ú–ï–ù–ò –ò –ü–†–ê–í –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–Ø –ü–û –°–ü–ò–°–ö–£ –ê–í–¢–û–†–ò–ó–ê–¶–ò–ò
[ `echo ${#username}` == 0 ] && {					#–ù–∞ —Å–ª—É—á–∞–π, –µ—Å–ª–∏ –Ω–µ –æ–ø—Ä–µ–¥–µ–ª–∏–ª–æ—Å—å –∏–º—è

	message=`echo -e "üõë<b>–û—à–∏–±–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏</b>\n‚ùå–ò–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –Ω–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–æ\n ‚è±$(_Now)"`
	BotMsg $sBotKey $nChatId 0 "$message"
	Logger "–ò–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –Ω–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–æ. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –∫–æ–º–ø—å—é—Ç–µ—Ä –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è." 2
	zenity --error --title=–û—à–∏–±–∫–∞ --ellipsize --text="–ò–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –Ω–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–æ.\n–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –≤ –û—Ç–¥–µ–ª –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è." --timeout=3
	exit

}
autorizedUser="`FileReader $appfolder/system/USERS $username`"		#–ò—â–µ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ —Å–ø–∏—Å–∫–µ
#–ó–∞—Ö–≤–∞—Ç–∏–º –Ω–∞–∑–≤–∞–Ω–∏–µ –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –≤ –≤–∏–¥–µ –∫–æ–¥–∞ —Å—Ç–æ–π–∫–∏-—Å—Ç–µ–Ω–¥–∞.
hostName=`echo ${cmdLine#${cmdLine:0:14}}`							#–í—ã–±–∏—Ä–∞–µ–º –∏–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞
	[ `echo ${#autorizedUser}` == 0 ] && { #–ï—Å–ª–∏ –∏–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç –≤ —Å–ø–∏—Å–∫–µ, –∑–∞–∫–∞–Ω—á–∏–≤–∞–µ–º —Ä–∞–±–æ—Ç—É

		message=`echo -e "üë§<b>–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å</b>\nÔ∏è‚ö†Ô∏è–ü—ã—Ç–∞–ª—Å—è –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è –∫ —Ö–æ—Å—Ç—É\nüñ•Ô∏è$hostName ‚è±$(_Now)"`
		BotMsg $sBotKey $nChatId 0 "$message"
		Logger "–ù–µ–∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω–Ω—ã–π –≤—Ö–æ–¥" 1 "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å(unknown)" "$username" "$hostName"
		zenity --error --title=–û—à–∏–±–∫–∞ --ellipsize --text="–ê–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—è –Ω–µ –ø—Ä–æ–π–¥–µ–Ω–∞.\n–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –≤ –û—Ç–¥–µ–ª –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è." --timeout=3
		exit

	}
#–ü—Ä–æ–≤–µ—Ä–∏–º –ø—Ä–∞–≤–∞ –Ω–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ. –ï—Å–ª–∏ –≤ —Å—Ç—Ä–æ–∫–µ –Ω–µ –Ω–∞–π–¥–µ–º –∏–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –∏–ª–∏ ADMIN, —Ç–æ –≤—ã–¥–∞–µ–º –æ—à–∏–±–∫—É.
	if [[ -z `echo $autorizedUser | grep "$hostName"` && -z `echo $autorizedUser | grep "ADMIN"` ]]
	then

		zenity --warning --title=–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ --ellipsize --text="–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏—Ö –ø—Ä–∞–≤\n–Ω–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ $hostName" --timeout=3
		exit

	fi



#–ü–û–õ–£–ß–ï–ù–ò–ï –ò–ù–§–û–†–ú–ê–¶–ò–ò –û –ö–û–ú–ü–¨–Æ–¢–ï–†–ï –°–¢–ï–ù–î–ê –ò–ó –ö–û–ú–ê–ù–î–ù–û–ô –°–¢–†–û–ö–ò –ó–ê–ü–£–°–ö–ê
namehost="`FileReader $appfolder/system/HOSTS $hostName`" 			#–ü–æ–ª—É—á–∏–º —Å—Ç—Ä–æ–∫—É —Å —Ö–æ—Å—Ç–æ–º –∏ –ø—Ä–æ—á–µ–π –∏–Ω—Ñ–æ–π, –µ—Å–ª–∏ –æ–Ω–∞ –µ—Å—Ç—å
hn=`echo ${namehost%% *}`
#–ò—â–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Ö–æ—Å—Ç–µ –∏–∑ —Å–ø–∏—Å–∫–∞ —Ö–æ—Å—Ç–æ–≤
	if [[ -z "$namehost" || `echo ${#hn}` != `echo ${#hostName}` ]]	#–ï—Å–ª–∏ –∏–º—è –Ω–µ –Ω–∞–π–¥–µ–Ω–æ
	then

		message=`echo -e "üõë<b>–û—à–∏–±–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏</b>\nÔ∏è‚ùå–ò–º—è —Ö–æ—Å—Ç–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ\nüñ•Ô∏è$hostName ‚è±$(_Now)"`
		BotMsg $sBotKey $nChatId 0 "$message"
		Logger "–ò–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ $hostName –Ω–µ –Ω–∞–π–¥–µ–Ω–æ. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Å—Ö–µ–º—É, —Å–ø–∏—Å–æ–∫ –∏ —Å—Ç—Ä–æ–∫—É –∑–∞–ø—É—Å–∫–∞." 2
		zenity --error --title=–û—à–∏–±–∫–∞ --ellipsize --text="–ò–º—è –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ.\n–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –≤ –û—Ç–¥–µ–ª –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è." --timeout=3
		exit

	fi
#–†–∞–∑–±–∏—Ä–∞–µ–º —Å—Ç—Ä–æ–∫—É –∞–¥—Ä–µ—Å–∞ –∏ –º–∞—Ä—à—Ä—É—Ç–∞, –µ—Å–ª–∏ —Ç–∞–∫–æ–π –µ—Å—Ç—å
addcheck=`echo $namehost | egrep -o "[A]((\w+\.){3}\w+)"`			#–ü–æ–ª—É—á–∞–µ–º —à–∞–±–ª–æ–Ω –¥–Ω—Å –∞–¥—Ä–µ—Å–∞ –∫–æ–º–ø—å—é—Ç–µ—Ä–∞
address=`echo ${addcheck#A}`										#–ü–æ–ª—É—á–∞–µ–º –¥–Ω—Å –∞–¥—Ä–µ—Å –∫–æ–º–ø—å—é—Ç–µ—Ä–∞
gwcheck=`echo $namehost | egrep -o "[G]((\w+\.){3}\w+)"`			#–ü–æ–ª—É—á–∞–µ–º —à–∞–±–ª–æ–Ω –∞–¥—Ä–µ—Å–∞ —à–ª—é–∑–∞
mskcheck=`echo $namehost | egrep -o "[M]((\w+\.){3}\w+)"`			#–ü–æ–ª—É—á–∞–µ–º —à–∞–±–ª–æ–Ω –º–∞—Å–∫–∏ —à–ª—é–∑–∞
	#–ü—Ä–æ–≤–µ—Ä–∏–º –ø—Ä–∞–≤–∏–ª—å–Ω–æ—Å—Ç—å ip-–∞–¥—Ä–µ—Å—Å–æ–≤ –Ω–∞ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏–µ —á–∞—Å—Ç–Ω—ã–º —Å–µ—Ç—è–º ipv4
	#"^((10|192|127|169)\.){1}((25[0..5]|(2[0..4]\d|1{0,1}\d){0,1}\d)(\.?)){3}$" –ø—Ä–æ–ø—É—Å–∫–∞–µ—Ç –∑–Ω–∞—á–∞—â–∏–µ –Ω—É–ª–∏
	if [ `Validator "$address" "((\w+\.){3}\w+)"` == 1 ]
	then

		message=`echo -e "üõë<b>–û—à–∏–±–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏</b>\nÔ∏è‚ùå–û—à–∏–±–∫–∞ –≤ —Å–ø–∏—Å–∫–µ —Ö–æ—Å—Ç–æ–≤\nüñ•Ô∏è$hostName ‚è±$(_Now)"`
		BotMsg $sBotKey $nChatId 0 "$message"
		Logger "–í –∑–∞–ø–∏—Å–∏ –∞–¥—Ä–µ—Å–∞ $hostName –æ—à–∏–±–∫–∞. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –∑–∞–ø–∏—Å—å –≤ —Å–ø–∏—Å–∫–µ —Ö–æ—Å—Ç–æ–≤." 2
		zenity --error --title=–û—à–∏–±–∫–∞ --ellipsize --text="–û—à–∏–±–∫–∞ –≤ —Å–ø–∏—Å–∫–µ —Ö–æ—Å—Ç–æ–≤.\n–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –≤ –û—Ç–¥–µ–ª –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è." --timeout=3
		exit

	fi
	if [ ! -z `echo $gwcheck` ]
	then

		flag=1								#–ï—Å–ª–∏ –º–∞—Ä—à—Ä—É—Ç –µ—Å—Ç—å, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ñ–ª–∞–≥ –¥–ª—è –∑–∞–ø—É—Å–∫–∞ —Å –º–∞—Ä—à—Ä—É—Ç–æ–º
		gateway=`echo ${gwcheck#G}`
		maskAddr=`echo ${mskcheck#M}`
		gatemask=`AddrToMask $maskAddr`		#–ü–æ–ª—É—á–∞–µ–º –º–∞—Å–∫—É —Å–µ—Ç–∏
		if [ `Validator "$gateway" "((\w+\.){3}\w+)"` == 1 ] || [ `Validator "$maskAddr" "((\w+\.){3}\w+)"` == 1 ]
		then

			message=`echo -e "üõë<b>–û—à–∏–±–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏</b>\nÔ∏è‚ùå–û—à–∏–±–∫–∞ –≤ —Å–ø–∏—Å–∫–µ —Ö–æ—Å—Ç–æ–≤\nüñ•Ô∏è$hostName ‚è±$(_Now)"`
			BotMsg $sBotKey $nChatId 0 "$message"
			Logger "–í –∑–∞–ø–∏—Å–∏ –∞–¥—Ä–µ—Å–∞ $hostName –æ—à–∏–±–∫–∞. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –∑–∞–ø–∏—Å—å –≤ —Å–ø–∏—Å–∫–µ —Ö–æ—Å—Ç–æ–≤." 2
			zenity --error --title=–û—à–∏–±–∫–∞ --ellipsize --text="–û—à–∏–±–∫–∞ –≤ —Å–ø–∏—Å–∫–µ —Ö–æ—Å—Ç–æ–≤.\n–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –≤ –û—Ç–¥–µ–ª –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è." --timeout=3
			exit

		fi

	else							#–ï—Å–ª–∏ –º–∞—Ä—à—Ä—É—Ç–∞ –Ω–µ—Ç, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ñ–ª–∞–≥ –∑–∞–ø—É—Å–∫–∞ –Ω–∞–ø—Ä—è–º—É—é

			flag=0					#–û–±–Ω—É–ª—è–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã, —á—Ç–æ–±—ã –ø—Ä–æ–≥—Ä–∞–º–º–∞ –Ω–µ –ø–∞–¥–∞–ª–∞
			gateway=0
			maskAddr=0
			gatemask=0

	fi



#–ó–ê–ü–£–°–ö –ü–†–ò–õ–û–ñ–ï–ù–ò–Ø –ò –ù–ê–ë–õ–Æ–î–ï–ù–ò–ï –ó–ê –•–û–î–û–ú –†–ê–ë–û–¢–´
binFile=`echo ${cmdLine:0:11}`		#–í—ã–±–∏—Ä–∞–µ–º –∏–∑ –∞—Ä–≥—É–º–µ–Ω—Ç–∞ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –¥–ª—è –∑–∞–ø—É—Å–∫–∞
bins=`echo ${appfolder%/httpN}`
#–ó–∞–ø—É—Å–∫–∞–µ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ —Å –Ω—É–∂–Ω—ã–º–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
	case $binFile in
	"httpn://VNC")
		binFile="$bins/vnc/vncviewer"
		config=" -config $bins/vnc/config/"
		TrackBinFile "VNC" "$binFile" "$config" $flag ".vnc"
		;;
	"httpn://KIT")
		binFile="$bins/kitty/putty "
		config=" -load "
		pswrd=`cat $bins/kitty/Sessions/linux/$hostName | grep "pw *"`
		TrackBinFile "Putty" "$binFile" "$pswrd$config" $flag
		;;
	"httpn://SCP")
		binFile="$bins/winscp/filezilla"
		config=" -c 0/"
		TrackBinFile "FileZilla" "$binFile" "$config" $flag
		;;
	*)
		message=`echo -e "üõë<b>–û—à–∏–±–∫–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏</b>\nÔ∏è‚ùå–û—à–∏–±–∫–∞ –≤ —Å—Å—ã–ª–∫–µ –Ω–∞ —Å—Ö–µ–º–µ\nüñ•Ô∏è$hostName ‚è±$(_Now)"`
		BotMsg $sBotKey $nChatId 0 "$message"
		Logger "–ü—Ä–∏ –∑–∞–ø—É—Å–∫–µ $binFile –ø—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Å—Ö–µ–º—É, –∑–∞–ø–∏—Å–∏ –∏ –¥–∏—Å–∫ GetStand" 2
		zenity --error --title=–û—à–∏–±–∫–∞ --ellipsize --text="–û—à–∏–±–∫–∞ –∑–∞–ø—É—Å–∫–∞ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è.\n–û–±—Ä–∞—Ç–∏—Ç–µ—Å—å –≤ –û—Ç–¥–µ–ª –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è." --timeout=3
		exit
		;;
	esac